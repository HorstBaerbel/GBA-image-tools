{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run in mgba",
            "type": "cppdbg",
            "preLaunchTask": "${defaultBuildTask}",
            "request": "launch",
            "program": "/usr/bin/mgba-qt",
            "args": [
                "-2",
                "${command:cmake.launchTargetPath}"
            ],
            "cwd": "${command:cmake.buildDirectory}"
        },
        {
            "name": "Run in mgba (Flatpak)",
            "type": "cppdbg",
            "preLaunchTask": "${defaultBuildTask}",
            "request": "launch",
            "program": "/usr/bin/flatpak",
            "args": [
                "run",
                "io.mgba.mGBA",
                "-2",
                "${command:cmake.launchTargetPath}"
            ],
            "cwd": "${command:cmake.buildDirectory}"
        },
        {
            "name": "Launch/Debug in mgba (Flatpak)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "${defaultBuildTask}",
            "postDebugTask": "Terminate mGBA",
            "targetArchitecture": "arm",
            "program": "${command:cmake.launchTargetPath}",
            "cwd": "${command:cmake.buildDirectory}",
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:2345",
            "linux": {
                "miDebuggerPath": "${env:DEVKITARM}/bin/arm-none-eabi-gdb",
                "setupCommands": [
                    {
                        "text": "set print pretty",
                        "ignoreFailures": false
                    },
                    {
                        "text": "file ${command:cmake.launchTargetPath}",
                        "ignoreFailures": false
                    },
                    {
                        "text": "-gdb-set disassembly-flavor arm",
                        "ignoreFailures": true
                    },
                    {
                        "text": "shell flatpak run io.mgba.mGBA -2 -g \"${command:cmake.launchTargetPath}\" &",
                        "ignoreFailures": false
                    }
                ]
            },
            "externalConsole": false,
            "showDisplayString": true,
            "logging": {
                "traceResponse": true,
                "moduleLoad": true,
                "trace": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            }
        },
        {
            "name": "Launch/Debug in mgba",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "${defaultBuildTask}",
            "program": "${command:cmake.launchTargetPath}",
            "debugServerPath": "/usr/bin/mgba-qt",
            "debugServerArgs": "-2 -g ${command:cmake.launchTargetPath}",
            "cwd": "${command:cmake.buildDirectory}",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "miDebuggerPath": "${env:DEVKITARM}/bin/arm-none-eabi-gdb",
            "setupCommands": [
                {
                    "text": "set print pretty",
                    "ignoreFailures": false
                },
                {
                    "text": "file ${command:cmake.launchTargetPath}",
                    "ignoreFailures": false
                },
                {
                    "text": "target remote localhost:2345",
                    "ignoreFailures": false
                },
                {
                    "text": "-gdb-set disassembly-flavor arm",
                    "ignoreFailures": true
                }
            ],
            "externalConsole": false,
            "showDisplayString": true,
            "logging": {
                "traceResponse": true,
                "moduleLoad": true,
                "trace": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            }
        },
        {
            "name": "Run in vba",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build Release",
            "program": "/usr/bin/vba",
            "args": [
                "${command:cmake.launchTargetPath}",
                "-2",
                "--agb-print"
            ],
            "cwd": "${command:cmake.buildDirectory}"
        }
    ]
}